{
	// See https://go.microsoft.com/fwlink/?LinkId=733558 
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "hxml",
			"file": "demo.hxml",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"group": "build"
		},
		{
            "label": "server",
            "type": "process",
			"command": "start.bat",
			"options": {
				"cwd": "${workspaceFolder}/demo"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn":["build"]
        }
	]
}